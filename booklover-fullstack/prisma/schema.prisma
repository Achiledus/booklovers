generator client {
    provider = "prisma-client-js"
    // previewFeatures = ["driverAdapters"]
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Book {
    id          Int       @id @default(autoincrement())
    title       String
    subtitle    String?
    slug        String    @unique
    description String?
    content     String?
    chapters    Chapter[]
    tags        BookTag[]
    genres      Genre
    // authorId    Int
    // author      Author    @relation(fields: [authorId], references: [id])
    status      Status
    meta        BookMeta?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
}

model Chapter {
    id        Int    @id @default(autoincrement())
    title     String
    order     Int
    content   String
    wordCount Int
    bookId    Int
    book      Book   @relation(fields: [bookId], references: [id])
}

model BookMeta {
    id       Int     @id @default(autoincrement())
    pages    Int?
    language String?
    isbn13   String? @unique
    coverUrl String?
    bookId   Int     @unique
    book     Book    @relation(fields: [bookId], references: [id])
}

model BookTag {
    id     Int    @id @default(autoincrement())
    name   String
    bookId Int
    book   Book   @relation(fields: [bookId], references: [id])
}

